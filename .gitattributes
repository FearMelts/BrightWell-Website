# Lock files (preserve exact formatting)
package-lock.json -text
yarn.lock -text
pnpm-lock.yaml -text

# Large files (Git LFS)
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.sketch filter=lfs diff=lfs merge=lfs -text

# Linguist overrides for repository language detection
*.css linguist-vendored=false
*.scss linguist-vendored=false
*.js linguist-vendored=false
*.html linguist-vendored=false
docs/* linguist-documentation
*.md linguist-documentation

# VS Code settings
.vscode/* linguist-language=JSON

# Next.js specific
.next/* linguist-generated=true
out/* linguist-generated=true
build/* linguist-generated=true
dist/* linguist-generated=true

# Dependencies
node_modules/* linguist-vendored=true
bower_components/* linguist-vendored=true

# Generated files
*.min.js linguist-generated=true
*.min.css linguist-generated=true
*.bundle.js linguist-generated=true
*.bundle.css linguist-generated=true

# Export options
.gitattributes export-ignore
.gitignore export-ignore
.vscode/ export-ignore
node_modules/ export-ignore
.next/ export-ignore
coverage/ export-ignore
*.log export-ignore