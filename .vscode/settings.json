{
  // === EDITOR BEHAVIOR ===
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Cascadia Code', 'SF Mono', Consolas, 'Liberation Mono', Menlo, Courier, monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.rulers": [80, 100],
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.fastScrollSensitivity": 5,

  // === CODE INTELLIGENCE ===
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "editor.hover.enabled": true,
  "editor.hover.delay": 300,
  "editor.lightbulb.enabled": "on",

  // === FORMATTING & LINTING ===
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.format.enable": true,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,

  // === WEB DEVELOPMENT SPECIFIC ===
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // === TYPESCRIPT CONFIGURATION ===
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.includeCompletionsForModuleExports": true,
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,

  // === NEXT.JS & REACT SPECIFIC ===
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,

  // === FILE MANAGEMENT ===
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/out": true,
    "**/.cache": true,
    "**/coverage": true,
    "**/.nyc_output": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/out/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/out": true,
    "**/.cache": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },

  // === TERMINAL CONFIGURATION ===
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Fira Code', 'JetBrains Mono', 'Cascadia Code', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.scrollback": 10000,

  // === WORKBENCH APPEARANCE ===
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabCloseButton": "right",
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": true,

  // === EXPLORER CONFIGURATION ===
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.compactFolders": false,
  "explorer.autoReveal": true,
  "explorer.sortOrder": "type",

  // === EXTENSIONS CONFIGURATION ===
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  "extensions.ignoreRecommendations": false,

  // === GITHUB COPILOT CONFIGURATION ===
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "json": true,
    "jsonc": true,
    "javascript": true,
    "javascriptreact": true,
    "typescript": true,
    "typescriptreact": true,
    "css": true,
    "scss": true,
    "html": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.iterativeFixing": true,
  "github.copilot.advanced": {
    "secret_key": "anonymous",
    "length": 1000,
    "temperature": "0.1",
    "top_p": "0.95",
    "listCount": 10,
    "inlineSuggestCount": 5
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.welcomeMessage": "always",
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.suggestions.trigger.automatic": true,
  "github.copilot.contextualSuggestions.enabled": true,

  // === COPILOT CHAT & INLINE FEATURES ===
  "inlineChat.acceptedOrDiscardBeforeSave": true,
  "inlineChat.enabled": true,
  "inlineChat.mode": "live",

  // === COPILOT PRIVACY & SECURITY ===
  "github.copilot.telemetry.enabled": false,
  "github.copilot.remoteLogging.enabled": false,

  // === LIVE SHARE CONFIGURATION ===
  "liveshare.featureSet": "stable",
  "liveshare.guestApprovalRequired": false,
  "liveshare.connectionMode": "auto",

  // === GIT CONFIGURATION ===
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.suggestSmartCommit": true,
  "git.autoRepositoryDetection": true,
  "git.decorations.enabled": true,
  "git.showPushSuccessNotification": true,
  "scm.diffDecorations": "all",
  "scm.diffDecorationsGutterWidth": 3,

  // === BREADCRUMBS ===
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // === PROBLEMS PANEL ===
  "problems.decorations.enabled": true,

  // === DEBUG CONFIGURATION ===
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "auto",
  "debug.showInStatusBar": "always",
  "debug.console.fontSize": 13,

  // === SECURITY ===
  "security.workspace.trust.untrustedFiles": "prompt",
  "security.workspace.trust.enabled": true,

  // === PERFORMANCE ===
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,

  // === AUTO-IMPORTS AND INTELLISENSE ===
  "typescript.suggest.paths": true,
  "javascript.suggest.paths": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "typescript.format.semicolons": "insert",
  "javascript.format.semicolons": "insert",
  "workbench.editor.tabActionLocation": "right",
  "accessibility.signals.terminalBell": {
    "sound": "off"
  },
  "terminal.integrated.enableVisualBell": false,
  "cSpell.words": [
    "amondnet",
    "AUTOCODING",
    "bradlc",
    "brightwell",
    "bwfc",
    "cmdk",
    "commitlint",
    "dbaeumer",
    "embla",
    "esbenp",
    "geekyeggo",
    "lighthouserc",
    "sonner",
    "treosh",
    "turbopack",
    "vaul"
  ],
  "todo-tree.tree.scanMode": "workspace"
}
