{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Basic rules for beginners
    "no-console": "warn", // Warns about console.log statements
    "no-unused-vars": "error", // Errors on unused variables
    "no-undef": "error", // Errors on undefined variables
    "quotes": ["error", "single"], // Enforces single quotes
    "semi": ["error", "always"] // Requires semicolons
  }
}
